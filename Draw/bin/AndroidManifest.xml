<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.draw"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />
    <uses-feature android:name="android.hardware.camera"/>
    <uses-permission android:name ="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/tipsy_draw"
        android:theme="@style/AppTheme" android:logo="@drawable/ic_launcher">
        <activity
            android:name="com.draw.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.draw.SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>
        <activity
            android:name="com.draw.DrawActivity"
            android:label="@string/title_activity_draw"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize" >
        </activity>
        <activity
            android:name="com.draw.PhotoActivity"
            android:label="@string/title_activity_photo"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize" >
        </activity>
    </application>

</manifest>
